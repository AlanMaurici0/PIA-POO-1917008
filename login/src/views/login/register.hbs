<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg">

    <h1 class="text-3x1 font-bold text-center text-xl">REGISTRAR</h1>

    <form action="" method="POST" clas="mt-4">

        <input type="text" name="usuario" placeholder="Usuario" pattern="[a-zA-Z0-9\s]{4,30}$"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="email" name="email" placeholder="Correo"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <input type="password" name="password" placeholder="ContraseÃ±a" pattern="[a-zA-Z0-9]{4,255}$"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

        <button type="submit" class="rounded-md w-full text-lg text-white font-semibold p-2 my-3 hover:bg-black-600 focus:bg-black-700" style="background-color: #191919;">Enviar</button>

        {{#if error}}
            <p class="text-red-600 font-bold text-lg my-3">*{{error}}</p>
        {{/if}}
    </form>

    <div>
        <img src="https://thumbs.gfycat.com/BountifulMassiveBirdofparadise-max-1mb.gif">
    </div>

</div>

